Options +FollowSymLinks
RewriteEngine On

RewriteBase /

RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteCond %{HTTP_HOST} ^www.expiringsoon.shop
RewriteRule (.*) https://expiringsoon.shop/$1 [R=301,L]

RewriteRule ^([aA-zZ])$ index.php?ref=$1
RewriteCond %{HTTP_HOST} ^(^.*)\.expiringsoon.shop
#RewriteRule (.*) index.php?ref=$1
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

